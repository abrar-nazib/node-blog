<%- include('../../partials/head.ejs') %>
    <!-- content -->
    <div class="container my-container my-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card card-body">
                    <h4 class="mb-3">
                        <!-- mb-3 = margin bottom 3 -->
                        Create a New Account
                    </h4>
                    <form action="/auth/signup" method="POST">
                        <div class="form-group">
                            <label for="username">
                                Enter your username (Must be unique)
                            </label>
                            <input type="text" name="username" id="username"
                                class="form-control <%= errors.username ? 'is-invalid' : '' %>"
                                value="<%= values.username ? values.username : '' %>">
                            <%# errors.name ? is-invalid=if errors.name exists, add is-invalid class %>
                                <div class="invalid-feedback">
                                    <%= errors.username ? errors.username : '' %>
                                </div>
                        </div>
                        <div class="form-group">
                            <label for="email">
                                Enter your email (Must be unique)
                            </label>
                            <input type="email" name="email" id="email"
                                class="form-control <%= errors.email ? 'is-invalid' : '' %>"
                                value="<%= values.email ? values.email : '' %>">
                            <div class="invalid-feedback">
                                <%= errors.email ? errors.email : '' %>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password">
                                Enter your password
                            </label>
                            <input type="password" name="password" id="password"
                                class="form-control <%= errors.password ? 'is-invalid' : '' %>"
                                value="<%= values.password ? values.password : '' %>">
                            <div class="invalid-feedback">
                                <%= errors.password ? errors.password : '' %>
                            </div>

                        </div>
                        <!-- confirm password form group -->
                        <div class="form-group">
                            <label for="confirmPassword">
                                Confirm your password
                            </label>
                            <input type="password" name="confirmPassword" id="confirmPassword" class="form-control
                            <%= errors.confirmPassword ? 'is-invalid' : '' %>">
                            <div class="invalid-feedback">
                                <%= errors.confirmPassword ? errors.confirmPassword : '' %>
                            </div>
                        </div>
                        <!-- submit button input -->
                        <div class="form-group my-3">
                            <input type="submit" class="btn btn-primary " value="Signup">
                        </div>
                    </form>
                    <a class="my-3 text-center" href="/auth/login">Already have an account? Log-in</a>

                </div>
            </div>

        </div>
    </div>

    <%- include('../../partials/footer.ejs') %>


        <!-- closing tags must -->
        </body>

        </html>